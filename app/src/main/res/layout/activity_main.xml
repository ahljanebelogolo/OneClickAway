<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="call.quiamco.com.makeaphonecall.MainActivity">

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="View Contacts"
        android:id="@+id/btnContacts"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColorHighlight="@color/abc_primary_text_material_dark"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Call someone"
        android:id="@+id/btnCall"
        android:layout_below="@+id/btnContacts"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/accent_material_dark"
        android:textSize="20sp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Send Sms"
        android:id="@+id/btnSms"
        android:layout_below="@+id/btnCall"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="set an alarm"
        android:id="@+id/btnAlarm"
        android:layout_below="@+id/btnSms"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#dd6fb8"
        android:textSize="20sp" />

</RelativeLayout>
